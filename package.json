{
  "name": "dinner-helper-app",
  "version": "1.0.0",
  "description": "A web-based application that helps users decide what to cook based on available ingredients",
  "main": "script.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "node run-tests.js"
  },
  "keywords": ["cooking", "recipes", "ingredients", "meal-planning"],
  "author": "Tatiana Khabibullina",
  "license": "MIT",
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/test-setup.js"],
    "collectCoverageFrom": [
      "script.js",
      "!node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"]
  }
}
